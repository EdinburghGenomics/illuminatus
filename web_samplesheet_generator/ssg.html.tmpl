    <table>
        <tr><th>Last Update</th>
            <th>FCID</th>
            <th>Experiment</th>
            <th>Project</th>
            <th></th>
        </tr>

        {{#table_rows}}
        <tr><td><pre>{{date}}</pre></td>
             <td><pre>{{fcid}}</pre></td>
             <td><pre>{{expt}}</pre></td>
             <td><pre>{{project}}</pre></td>
             <td><input type="submit" name="submit_{{fcid}}" value="Generate"></td>
        </tr>
        {{/table_rows}}

    </table>
    </form>

